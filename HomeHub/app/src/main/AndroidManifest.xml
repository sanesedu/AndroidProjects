<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanesedu.homehub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DepartmentActivity"
            android:label="Departments"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ProductsActivity"
            android:label="Products"
            android:parentActivityName=".DepartmentActivity" />
        <activity
            android:name=".ProductCreationActivity"
            android:label="Create Product"
            android:parentActivityName=".ProductsActivity" />
        <activity
            android:name=".AlertsActivity"
            android:label="@string/title_activity_alerts"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>