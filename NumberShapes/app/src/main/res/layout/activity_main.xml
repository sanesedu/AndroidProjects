<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sanesedu.numbershapes.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a number below to find out if it is a triangular number, a square number, both or none"
        android:id="@+id/introTxt"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/usersNumber"
        android:layout_below="@+id/introTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:width="250dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Number"
        android:id="@+id/testButton"
        android:layout_below="@+id/usersNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:height="50dp"
        android:width="140dp"
        android:textSize="16sp"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:onClick="testNumber" />
</RelativeLayout>
