<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/main_background</item>
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="easy_radio" parent="radio">
        <item name="android:text">@string/easy</item>
    </style>

    <style name="medium_radio" parent="radio">
        <item name="android:text">@string/medium</item>
    </style>

    <style name="difficult_radio" parent="radio">
        <item name="android:text">@string/difficult</item>
    </style>

    <style name="players">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="one_player" parent="players">
        <item name="android:text">@string/one_player</item>
    </style>

    <style name="two_players" parent="players">
        <item name="android:text">@string/two_players</item>
    </style>

</resources>
