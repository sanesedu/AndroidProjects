<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.sanesedu.rockpaperscissors.ResultActivity"
    style="@style/result_activity_container">

    <LinearLayout
        style="@style/result_container"
        android:id="@+id/result_container">

        <TextView
            style="@style/elements"
            android:id="@+id/elements"
            tools:text="Rock beats Scissors"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" />

        <TextView
            style="@style/result"
            android:id="@+id/result"
            tools:text="You win!"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        style="@style/button_container">

        <Button
            style="@style/home_button"
            android:id="@+id/home_button" />

        <Button
            style="@style/new_game_result_button"
            android:id="@+id/new_game_result_button" />

    </LinearLayout>

</RelativeLayout>
