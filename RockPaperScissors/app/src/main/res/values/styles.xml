<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="home_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/home_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/home_background</item>
    </style>

    <style name="title_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/home_titles</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="rock_title" parent="title_item">
        <item name="android:text">@string/rock</item>
    </style>

    <style name="paper_title" parent="title_item">
        <item name="android:text">@string/paper</item>
    </style>

    <style name="scissors_title" parent="title_item">
        <item name="android:text">@string/scissors</item>
    </style>

    <style name="new_game_button">
        <item name="android:layout_width">@dimen/new_game_home_width</item>
        <item name="android:layout_height">@dimen/new_game_home_height</item>
        <item name="android:text">@string/new_game</item>
        <item name="android:background">@drawable/new_game_button</item>
        <item name="android:layout_marginTop">@dimen/new_game_home_marg_top</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="game_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/game_background</item>
        <item name="android:padding">@dimen/game_layout_padding</item>
    </style>

    <style name="item">
        <item name="android:layout_height">@dimen/game_item_measures</item>
        <item name="android:layout_width">@dimen/game_item_measures</item>
        <item name="android:layout_marginRight">@dimen/game_items_margin</item>
        <item name="android:layout_marginLeft">@dimen/game_items_margin</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="opp_items" parent="item">
        <item name="android:background">@drawable/opponent_items</item>
        <item name="android:layout_width">@dimen/opp_game_items_measures</item>
        <item name="android:layout_height">@dimen/opp_game_items_measures</item>
        <item name="android:layout_marginBottom">@dimen/game_items_margin</item>
    </style>

    <style name="rock" parent="item">
        <item name="android:src">@drawable/rock</item>
    </style>

    <style name="paper" parent="item">
        <item name="android:src">@drawable/paper</item>
    </style>

    <style name="scissors" parent="item">
        <item name="android:src">@drawable/scissors</item>
    </style>

    <style name="names">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/game_names_txt_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="opponent" parent="names">
        <item name="android:text">@string/opponent</item>
        <item name="android:layout_below">@id/opponent_layout</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="you" parent="names">
        <item name="android:text">@string/you</item>
        <item name="android:layout_above">@id/your_layout</item>
    </style>

    <style name="selected_item">
        <item name="android:layout_width">@dimen/selected_item_measures</item>
        <item name="android:layout_height">@dimen/selected_item_measures</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="opp_sel_item" parent="selected_item">
        <item name="android:layout_below">@id/opp_name</item>
        <item name="android:layout_marginTop">@dimen/selected_item_margin</item>
    </style>

    <style name="you_sel_item" parent="selected_item">
        <item name="android:layout_above">@id/you_name</item>
        <item name="android:layout_marginBottom">@dimen/selected_item_margin</item>
    </style>

    <style name="play_button">
        <item name="android:layout_height">@dimen/result_buttons_height</item>
        <item name="android:layout_width">@dimen/play_button_width</item>
        <item name="android:text">@string/play</item>
        <item name="android:background">@drawable/play_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">invisible</item>
    </style>


    <style name="full_selections">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="opp_matchup" parent="full_selections">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="you_matchup" parent="full_selections">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="next_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/next</item>
        <item name="android:background">@drawable/play_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/next_button_txt_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/next_button_margin</item>
    </style>

    <style name="full_names">
        <item name="android:layout_width">@dimen/full_names_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/full_names_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/full_names_txt_size</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="full_opp_name" parent="full_names">
        <item name="android:text">@string/opponent</item>
    </style>

    <style name="you_full_name" parent="full_names">
        <item name="android:text">@string/you</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>





    <style name="result_activity_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/home_background</item>
    </style>

    <style name="result_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/result_container_margin_top</item>
    </style>

    <style name="elements">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/elements_txt_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">@dimen/elements_margin_bot</item>
    </style>

    <style name="result">
        <item name="android:layout_width">@dimen/result_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/result_txt_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="button_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/button_container_margin_top</item>
        <item name="android:layout_below">@id/result_container</item>
    </style>

    <style name="result_buttons">
        <item name="android:layout_width">@dimen/result_buttons_width</item>
        <item name="android:layout_height">@dimen/result_buttons_height</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/new_game_button</item>
        <item name="android:layout_margin">@dimen/result_buttons_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="home_button" parent="result_buttons">
        <item name="android:text">@string/home</item>
    </style>

    <style name="new_game_result_button" parent="result_buttons">
        <item name="android:text">@string/new_game</item>
    </style>

</resources>
